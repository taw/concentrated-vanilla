<battlefield_roads>
    <generation>
        <region extent="B"/>                		<!-- Region to generate the roads for. Valid values are A or B -->
        <pathfinding enabled="false"/>          	<!-- Use pathfinding to generate high res data -->
        <suitability_map>
            <subdivision>9</subdivision>
            <threshold>25</threshold>       		<!-- Suitability threshold below which the area is considered unsuitable -->
            <slope>
                <minimum>0.22</minimum>     		<!-- Minimum slope before a cost is incurred -->
                <maximum>0.5</maximum>      		<!-- Maximum slope before area becomes unsuitable -->
                <base>100</base>            		<!-- Base suitability at minimum slope -->
                <fall_off>1</fall_off>      		<!-- Rate at which suitability decreases as slope increases -->
            </slope>
            <quality>
                <none>0</none>              		<!-- Suitability for quality: none -->
                <very_low>25</very_low>     		<!-- Suitability for quality: very_low -->
                <low>50</low>               		<!-- Suitability for quality: low -->
                <normal>75</normal>         		<!-- Suitability for quality: normal -->
                <high>100</high>            		<!-- Suitability for quality: high -->
                <very_high>100</very_high>  		<!-- Suitability for quality: very_high -->
            </quality>
            <hardness>
                <swamp>0</swamp>            		<!-- Suitability for hardness: swamp -->
                <sand>25</sand>             		<!-- Suitability for hardness: sand -->
                <soil>100</soil>            		<!-- Suitability for hardness: soil -->
                <clay>100</clay>            		<!-- Suitability for hardness: clay -->
                <shale>75</shale>           		<!-- Suitability for hardness: shale -->
                <rock>75</rock>             		<!-- Suitability for hardness: rock -->
            </hardness>
        </suitability_map>
        <link>
            <type>Spline</type>             		<!-- Type of link to place between road points. Valid values are Splines-->
            <subdivisions>2</subdivisions>  		<!-- Number of times to subdivide the links between road points. -->
            <bend_tolerance>0.87</bend_tolerance>   <!-- cos of the angle between road sections below which the control points will be skewed -->
            <t_junction_angle>0.1</t_junction_angle> <!-- cos of the angle between the dominant road and the side road above which a wide join is used -->
        </link>
        <fall_off>
            <type>Linear</type>             		<!-- Type of fall off to use for the roads in the distance. Valid values are None or Linear-->
	        <start>0.8</start>              		<!-- Percentage of half battlefield width at which to begin fall off -->
	        <end>0.9</end>                  		<!-- Percentage of half battlefield width at which to end fall off. No roads after this point. -->
	    </fall_off>
    </generation>
    
    <rasterisation>
        <bucket_size>512</bucket_size>             	<!-- size of the rasterised texture buckets (in pixels) -->
        <metres_per_texel>1</metres_per_texel>   	<!-- number of metres per texel -->
        <spline_samples>50</spline_samples>         <!-- number of samples to take along the spline -->
